<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_barcode_scanner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#ffffff"
   >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:id="@+id/Linearlayot_for_barcodescanner">


        <TextView
            style="@style/Heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="Great! \n is this the barcode?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="TagNumber"
            android:id="@+id/editTagNumber"
            android:text="TAG NUMBER"
            android:textColor="#000"
            android:textAlignment="center"
            android:textColorHint="#000"
            android:textSize="24dp"
            android:gravity="center_vertical|center_horizontal" />


        <Button
            style="@style/Button"
            android:id="@+id/buttonToConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:onClick="buttonToConfirm"
            android:background="@drawable/buttonblue"
            />

        <Button
            style="@style/Button"
            android:id="@+id/buttonToRescan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No, Scan Again"
            android:onClick="buttonToRescan"
            android:background="@drawable/buttonblue"
            />

    </LinearLayout>



</LinearLayout>
