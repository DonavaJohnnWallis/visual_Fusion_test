<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cameraContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/buttonFlashlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="normal"
            app:backgroundTint="#fefede"
            android:background="#fefede"

            android:layout_margin="10dp"
            android:layout_gravity="bottom|right" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#000000">

       <!-- ticket number gets pulled into this feild. dont delete. just hide -->
        <TextView
            android:id="@+id/labelScanResult"
            android:hint="Scan Barcode"
            android:textColorHint="#ffffff"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal"
            android:padding="20dp"
            android:background="#000000"
            android:layout_weight="1"
            android:textStyle="bold"/>


        <!-- not sure if this does anything  <Button
            android:id="@+id/ScanButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Scan" /> -->
    </LinearLayout>

</LinearLayout>